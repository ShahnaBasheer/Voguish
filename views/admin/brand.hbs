<div class="app-wrapper">
      <!-- row -->
    <div class="container-fluid">
        <div class="row app-wrapper-row">
            <div class="col-12">   
                <div class="d-flex justify-content-between align-items-start">
                    <h4 class="app-page-title text-dark text-uppercase">BRANDS</h4>
                    <a href="/admin/add-brand" class="btn btn-primary d-flex align-items-center">
                    <i class="fa-solid fa-circle-plus fs-5 pe-1"></i>Add Brand</a>
                </div>
                
                <div class="card pb-4">
                    <div class="card-body">  
                        {{#if user}}
                        <p class="text-danger">{{user}} has been successfully deleted!</p>
                        {{/if }}
                        
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" id="myTable">
                                <thead>
                                    <tr>
                                        <th style="width:9rem;max-width:9rem;">Brand</th>
                                        <th style="wdith:25rem;max-width:25rem;">Description</th>
                                        <th>Country</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each brands}}
                                    <tr>
                                        <td style="width:9rem;max-width:9rem;" data-bs-toggle="tooltip"
                                           title="{{this.brand}}">{{this.brand}}</td>
                                        <td style="width:25rem;max-width:25rem;" data-bs-toggle="tooltip"
                                           title="{{this.description}}">{{this.description}}</td>
                                        <td>{{this.country}}</td>
                                        <td>
                                            <a href="/admin/edit-brand/{{this._id}}">
                                               <i class="fa-solid fa-pen-to-square text-primary"></i>
                                            </a>
                                            {{#if this.isDeleted}}
                                                <a href="/admin/restore-brand/{{this._id}}">
                                                   <i class="fa-solid fa-rotate-left text-primary"></i></i>
                                                </a>
                                            {{else}}
                                                <a href="/admin/delete-brand/{{this._id}}" class="deletebtn">
                                                    <i class="fa-solid fa-trash text-danger"></i>
                                                </a>
                                            {{/if}}
                                        </td>
                                    </tr> 
                                    {{/each}} 
                                </tbody>    
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
      <!--  container -->
</div>

 