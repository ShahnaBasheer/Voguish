<div class="app-wrapper">
    <div class="row mx-3 my-5">
        <!-- Column -->
        <div class="col-lg-12 py-5">
            <div class="card py-4">
                <div class="card-body mx-3">
                    <form action="/admin/edit-brand" method="POST">
                        <div class="form-body">
                            <h4 class="card-title pb-3">EDIT BRANDS</h4>
       
                            <div class="form-group mb-3">
                                <label for="brand">Brand Name</label>
                                <input type="text" class="form-control" id="brand" required
                                  name="brand" value={{brand.brand}}>
                            </div>
                            <div class="form-group mb-3">
                                <label for="brand_description">Description</label>
                                <textarea  class="form-control" id="brand_description" 
                                  name="description">{{brand.description}}</textarea>
                            </div>
                            <div class="form-group mb-3">
                                <label for="brand_country">Country</label>
                                <input type="text" class="form-control" id="brand_country" required
                                  name="country" value={{brand.country}}>
                            </div>

                            <input type="hidden" name="brandId" value={{brand._id}}>
                            
                            
                            <button type="submit" class="btn btn-primary">Edit Brand</button>
                        </div>
                    </form>  
                </div>
            </div>
        </div>
    </div>
</div>

