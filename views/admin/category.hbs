<div class="app-wrapper">
      <!-- row -->
    <div class="container-fluid">
        <div class="row my-5">
            <div class="col-12 py-5">
                <div class="card py-4">
                    <div class="card-body">  
                        <h4 class="card-title pb-3">ALL CATEGORIES</h4>
                        {{#if user}}
                        <p class="text-danger">{{user}} has been successfully deleted!</p>
                        {{/if }}
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered zero-configuration" id="myTable">
                                <thead>
                                    <tr>
                                        <th>Category</th>
                                        <th>Parent</th>
                                        <th>IsDeleted</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each categories}}
                                    <tr>
                                        <td>{{this.category}}</td>
                                        <td>{{this.maincategory}}</td>
                                        <td>{{this.isDeleted}}</td>
                                        <td>
                                            <a href="edit-category/{{this._id}}">
                                               <i class="fa-solid fa-pen-to-square text-primary"></i>
                                            </a>
                                            {{#if this.isDeleted}}
                                                <a href="/admin/restore-category/{{this._id}}">
                                                   <i class="fa-solid fa-rotate-left text-primary"></i></i>
                                                </a>
                                            {{else}}
                                                <a href="/admin/delete-category/{{this._id}}" class="deletebtn">
                                                    <i class="fa-solid fa-trash text-danger"></i>
                                                </a>
                                            {{/if}}
                                        </td>
                                    </tr> 
                                    {{/each}} 
                                </tbody>    
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
      <!--  container -->
</div>

 