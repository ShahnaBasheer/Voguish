<div class="app-wrapper">
      <!-- row -->
    <div class="container-fluid">
        <div class="row app-wrapper-row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-start">
                    <h4 class="app-page-title text-dark text-uppercase">CATEGORIES</h4>
                    <a href="/admin/add-category" class="btn btn-primary d-flex align-items-center">
                    <i class="fa-solid fa-circle-plus fs-5 pe-1"></i>Add Category</a>
                </div>
                <div class="card pb-4">
                    <div class="card-body">
                        {{#if user}}
                        <p class="text-danger">{{user}} has been successfully deleted!</p>
                        {{/if }}
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" id="myTable">
                                <thead>
                                    <tr>
                                        <th>Category</th>
                                        <th>Parent</th>
                                        <th>IsDeleted</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each categories}}
                                    <tr>
                                        <td>{{this.category}}</td>
                                        <td>{{this.maincategory}}</td>
                                        <td>{{#if this.isDeletedBy}}Yes{{else}}No{{/if}}</td>
                                        <td>
                                            <a href="edit-category/{{this._id}}">
                                               <i class="fa-solid fa-pen-to-square text-primary"></i>
                                            </a>
                                            {{#if this.isDeleted}}
                                                <a href="/admin/restore-category/{{this._id}}">
                                                   <i class="fa-solid fa-rotate-left text-primary"></i>
                                                </a>
                                            {{else}}
                                                <a href="/admin/delete-category/{{this._id}}" class="deletebtn">
                                                    <i class="fa-solid fa-trash text-danger"></i>
                                                </a>
                                            {{/if}}
                                        </td>
                                    </tr> 
                                    {{/each}} 
                                </tbody>    
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
      <!--  container -->
</div>

 