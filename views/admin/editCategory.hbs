<div class="app-wrapper">
    <div class="row mx-3 my-5">
        <!-- Column -->
        <div class="col-lg-12 py-5">
            <div class="card py-4">
                <div class="card-body mx-3">
                    <form action="/admin/edit-category" method="POST">
                        <div class="form-body">
                            <h4 class="card-title pb-3">EDIT CATEGORIES</h4>
                             
                            <div class="form-group mb-3">
                                <label for="category">Category Name:</label>
                                <input type="text" class="form-control" id="category" required
                                  name="category" value="{{category.category}}"">
                            </div>
                            
                            <input type="hidden" value="{{category._id}}"">
                            
                            <div class="form-group mb-3">
                                <label for="parent">Main Category:</label>
                                <span class="fw-bolder">{{category.maincategory}}</span>
                                <select class="form-control" id="parent" name="maincategory">
                                    <option value="">Select Parent Category</option>
                                    <option value="Indianwear">Indian wear</option>
                                    <option value="Westernwear">Western wear</option>
                                    <option value="Topwear">Top wear</option>
                                    <option value="Sportswear">Sports wear</option>
                                    <option value="Bottomwear">Bottom wear</option>
                                    <option value="Maternitywear">Maternity wear</option>
                                    <option value="Nightwear">Night wear</option>
                                    <option value="Lingerie">Lingerie</option>
                                    
                                    <!-- You can dynamically populate the parent categories here from your database -->
                                    <!-- Example: -->
                                    <!-- <option value="parentCategoryId">Parent Category Name</option> -->
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary">Edit Category</button>
                        </div>
                    </form>  
                </div>
            </div>
        </div>
    </div>
</div>

