<section class="px-5 py-3">
    <div class="container">
        <div class="row ">
               {{> profileSideBar}}
            <div class="col-md-9">
                <div class="shadows rounded bg-white show active p-4 ms-2">
                    <h4 class="font-italic mb-4">Personal information</h4>

                    <div id="form" class="mx-auto">
  
                        <div class="row">
                            <div class="col-9">
                               <div class="form-group">
                                 <div class="input-group mb-3">
                                     <span class="input-group-text"><i class="fa-solid fa-user"></i></span>
                                     <input type="text" value="{{userprofile.firstname}}" class="form-control" aria-label="firstname" 
                                        placeholder="Enter Your firstname" data-field="firstname" id="firstname" required disabled>
                                 </div>
                               </div>
                            </div>
                            <div class="col-3">
                               <button class="edit-btn btn btn-info" data-field="firstname">Edit</button>
                               <a href="/profile/edit/" class="btn btn-primary save-button btn-md" data-field="firstname">Save</a>
                               <button class="cancel-btn btn btn-danger btn-md" data-field="firstname">Cancel</button> 
                            </div>
                            <p id="firstname-text" class="text-danger"></p>
                        </div>
  
  
                        <div class="row">
                            <div class="col-9">
                                <div class="form-group">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text"><i class="fa-solid fa-user"></i></span>
                                        <input type="text" value="{{userprofile.lastname}}" class="form-control" aria-label="lastname" 
                                          placeholder="Enter Your lastname" data-field="lastname" id="lastname" required disabled>
                                    </div>
                                </div>
                            </div>
                            <div class="col-3">
                                <button class="edit-btn btn btn-info" data-field="lastname">Edit</button>
                                <a href="/profile/edit/" class="btn btn-primary save-button btn-md" data-field="lastname">Save</a>
                                <button class="cancel-btn btn btn-danger btn-md" data-field="lastname">Cancel</button> 
                            </div>
                            <p id="lastname-text" class="text-danger"></p>
                        </div>
  
  
                        <div class="row pb-3">
                            <div class="col-9">
                                <div class="form-group">
                                    <label class="text-dark pe-5">Gender</label>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input " type="radio" name="gender" id="male" value="male" data-field="gender"
                                           {{#if (isEqualTo userprofile.gender 'male')}}checked{{/if}} disabled>
                                        <label class="form-check-label text-dark" for="male">Male</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="gender" id="female" value="female" data-field="gender"
                                           {{#if (isEqualTo userprofile.gender 'female')}}checked{{/if}} disabled>
                                        <label class="form-check-label text-dark" for="female">Female</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-3">
                                <button class="edit-btn btn btn-info" data-field="gender">Edit</button>
                                <a href="/profile/edit/" class="btn btn-primary save-button btn-md" data-field="gender">Save</a>
                                <button class="cancel-btn btn btn-danger btn-md" data-field="gender">Cancel</button> 
                            </div>
                            <p id="gender-text" class="text-danger"></p>
                        </div>
  
  
                        <div class="row">
                            <div class="col-9">
                                <div class="form-group">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text"><i class="fa-solid fa-envelope"></i></span>
                                        <input type="email" class="form-control" aria-label="email" pattern="[^@]+@[^@]+.[a-zA-Z]{2,6}" 
                                            placeholder="example@email.com" value="{{userprofile.email}}" id="email" data-field="email" required disabled>
                                    </div>
                                </div>
                            </div>
                            <div class="col-3">
                                <button class="edit-btn btn btn-info" data-field="email">Edit</button>
                                <a href="/profile/edit/" class="btn btn-primary save-button btn-md" data-field="email">Save</a>
                                <button class="cancel-btn btn btn-danger btn-md" data-field="email">Cancel</button> 
                            </div>
                            <p id="email-text" class="text-danger"></p>
                        </div>
  
  
                        <div class="row">
                            <div class="col-9">
                                <div class="form-group">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text"><i class="fa-solid fa-phone"></i></span>
                                        <input type="tel" class="form-control" aria-label="phone" value="{{user.phone}}" data-field="phone"
                                          placeholder="+911234567890" id="phone" required disabled>
                                    </div>
                                </div>  
                            </div>
                            <div class="col-3">
                                <button class="edit-btn btn btn-info" data-field="phone">Edit</button>
                                <a href="/profile/edit/" class="btn btn-primary save-button btn-md" data-field="phone">Save</a>
                                <button class="cancel-btn btn btn-danger btn-md" data-field="phone">Cancel</button> 
                            </div>
                            <p id="phone-text" class="text-danger"></p>
                        </div>
                        

                        <div class="pt-3 pb-4">
                            <button class="btn btn-sm text-white" style="background-color:rgb(116, 116, 125);" id="change-password">Change Password</button>
                            
                        </div>

                        <div id="passwordChange">

                             <div class="row">
                                <div class="col-9">
                                     <div class="form-group">
                                        <div class="input-group mb-3">
                                            <span class="input-group-text"><i class="fa-solid fa-lock"></i></span>
                                            <input type="password" name="currentPassword" class="form-control" aria-label="currPassword" 
                                                id="currentPassword" placeholder="Enter Your Current Password" autocomplete="new-password">
                                        </div>
                                   </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-9">
                                     <div class="form-group">
                                        <div class="input-group mb-3">
                                            <span class="input-group-text"><i class="fa-solid fa-lock"></i></span>
                                            <input type="password" name="newPassword" class="form-control" aria-label="password" 
                                                id="newPassword" placeholder="Enter Your password">
                                        </div>
                                   </div>
                                </div>
                            </div>
  
  
                            <div class="row">
                                <div class="col-9"> 
                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <span class="input-group-text"><i class="fa-solid fa-key"></i></span>
                                            <input type="password" name="confirmPassword" class="form-control" aria-label="confirm password" 
                                                id="confirmPassword" placeholder="Confirm Your Password">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <p class="alert alert-danger py-1" style="display:none;" role="alert" id="password-message"></p>
                            <button type="submit" id="submitBtn" class="btn btn-primary btn-sm">Save</button>
                            <button type="button" class="btn btn-danger btn-sm" id="cancelChange">Cancel</button>
                        </div>
                    </div>
				</div>     
            </div>
        </div>
    </div>
</section>


<!-- Modal -->
<div class="modal fade" id="modalOtp" data-bs-backdrop="static" data-bs-keyboard="false" 
    tabindex="-1" aria-labelledby="modalOtpLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5 text-center" id="modalOtpLabel">Verify OTP</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
           <div id="oldEmail">
               <input type="text" class="form-control" placeholder="Enter OTP sent to ">
           </div>
           <div id="newEmail">
               <input type="text" class="form-control" placeholder="Enter OTP sent to ">
           </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">SUBMIT</button>
      </div>
    </div>
  </div>
</div>





