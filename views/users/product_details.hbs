                        <div class="size-wrap">
							<p class="size-desc"> 
                                {{#each product.sizes}}
								   <a href="/cart/check-size-color/{{@root/product.slug}}?size={{@key}}" 
                                       class="size text-decoration-none size-{{@index}}
                                      {{#if user}}{{#if (isEqualTo @index 0)}}sizeselected{{/if}}{{/if}}">{{@key}}</a>
							    {{/each}}
                            </p>
                            <p id="size-alert" class="text-danger"></p>
						</div>
                    </div>
                    <div class="d-flex mb-4">
                        <strong class="text-dark me-3">Colors:</strong>
                        {{#each (uniqueColors product.sizes)}}
                            <div class="">
                                <input type="radio" class="color-wrap" id="color-{{@index}}" name="color" 
                                  value="{{this}}" {{#if (isEqualTo @index 0)}}checked{{/if}}>
                                <label class="" for="color-{{@index}}">{{this}}</label>
                            </div>
                        {{/each}}
                    </div>
                    <div class="d-flex align-items-center me-3 pb-5" style="width: 130px;">
                        <div class="input-group-btn">
                            <a href="#" class="btn btn-accent btn-action btn-raised" id="minusBtn">
                                <i class="fa fa-minus"></i>
                            </a>
                        </div>
                        <input type="text" class="form-control text-center" value="1" id="quantityInput">
                        <div class="input-group-btn">
                            <a href="#" class="btn btn-accent btn-action btn-raised" id="plusBtn">
                                <i class="fa fa-plus"></i>
                            </a>
                        </div>
                    </div>
                    <a type="button" href="/cart/addtocart/{{product.slug}}" id="addToCartBtn"
                        class="btn mb-2 mb-md-0 btn-primary btn-cart-color btn-round">
                        <span> Add To Cart</span> 
					    <div class="icon icon-round d-flex align-items-center justify-content-center">
					   	   <i class="fa fa-shopping-cart e-1"></i>
					  </div>
					</a>
                    <a type="button" href="/cart" id="goToCartBtn"
