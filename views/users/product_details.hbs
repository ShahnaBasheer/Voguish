 <!-- Shop Detail Start -->
    <div class="container-fluid py-3">
        <div class="row">
            <!-- Multiple images -->
            <div class="col-lg-custom-2 col-2 mt-2 flex-column">
                <div class="carousel-container">
                    <div class="carousel" id="carouselVertical">
                        {{#each product.images}}
                            <div class="carousel-item carousel-cell">
                                <img src="/uploads/{{this}}" alt="Image {{inc @index}}">
                            </div>
                        {{/each}}
                    </div>
                    <div class="carousel-controls">
                        <button class="control-btn prev-btn">
                            <i class="fa-solid fa-chevron-up"></i>
                        </button><!--&uarr;-->
                        <button class="control-btn next-btn">
                            <i class="fa-solid fa-chevron-down"></i>
                        </button><!--&darr;-->
                    </div>
                </div>
            </div>
            <!--end multiple images-->
            <div class="col-lg-custom-4">
                <div id="imgCarousel" class="carousel slide" ><!--data-bs-ride="carousel"-->
                    <div class="carousel-inner">
                        {{#each product.images}}
                            <div class="carousel-item  {{#if (isEqualTo @index 0)}}active{{/if}}">
                                <img src="/uploads/{{this}}" class="d-block w-100 img-1" alt="Image {{inc @index}}">
                                <div class="img-2"></div>
                            </div>
                        {{/each}}
                    </div>
                </div> 
            </div>
            <div class="col-lg-custom-6 h-auto bg-light mt-2">
                <div class="h-100 p-3">
                    <h5 class='pro-brand'>{{product.brand.brand}}</h5>
                    <p class="pro-title">{{product.title}}</p>
                    
